<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <% if comment.image.attached? %>
          <td><%= image_tag comment.image.variant(resize: "200x200") %></td>
        <% end %>
        <td><%= link_to '詳細', comment %></td>
        <td><%= link_to '編集', edit_comment_path(comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_comment_path %>
